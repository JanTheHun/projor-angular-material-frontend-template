---
import { NgModule } from "@angular/core";
import { RouterModule, Routes } from "@angular/router";
import { MainContentComponent } from "./components/main-content/main-content.component";

{{#entities}}
import { {{name}}TableComponent } from "./components/entities/{{kebabCase name}}/{{kebabCase name}}-table/{{kebabCase name}}-table.component";
import { {{name}}FormComponent } from "./components/entities/{{kebabCase name}}/{{kebabCase name}}-form/{{kebabCase name}}-form.component";
import { {{name}}RouteComponent } from "./components/entities/{{kebabCase name}}/{{kebabCase name}}-route/{{kebabCase name}}-route.component";
{{/entities}}

const routes: Routes = [
  {
    path: "",
    component: MainContentComponent
  },
  {
    path: "",
    redirectTo: "/main",
    pathMatch: "full"
  },
  {{#entities}}
    {
      path: "{{kebabCase name}}",
      component: {{name}}RouteComponent
    },
    {
      path: "{{kebabCase name}}/:id",
      component: {{name}}FormComponent
    },
    {
      path: "create/{{kebabCase name}}",
      component: {{name}}FormComponent
    },
  {{/entities}}
  {
    path: "**",
    redirectTo: "/"
  }
];

@NgModule({
  imports: [RouterModule.forRoot(routes)],
  exports: [RouterModule]
})
export class AppRoutingModule { }
